include ../assets/jade/templates/_global_vars
include ../assets/jade/templates/_global_mixins
include ../assets/jade/templates/_project_mixins
include ../assets/jade/templates/_project_vars

//-Here you can see some examples of jade tricks of glivera-team

// Form mixin
+form_element({
	type:'text',
	class_array:default_field,
	title:'some title',
	id:'some',
	placeholder:'some text'
})
+form_element({
	type:'textarea',
	class_array:default_field,
	title:'some title',
	id:'some'
})
+form_element({
	type: 'select',
	class_array: default_field,
	title: 'some title',
	id: 'id',
	add_class: 'someclass',
	options: ['Option 1', 'Option 2', 'Option 3']
})
+form_element({
	type: 'radio',
	class_array: default_field,
	title: 'some title',
	id: 'id',
	add_class: 'someclass',
	name:'radiobtn',
	checked:true
})
+form_element({
	type: 'checkbox',
	class_array: default_field,
	title: 'some title',
	id: 'id',
	add_class: 'someclass',
	name: 'radiobtn',
	checked: true
})
// Form mixin###